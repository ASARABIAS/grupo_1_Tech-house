            <main>
                <section class="Nuevos-productos">
                    <h3>Nuevos productos</h3>
                    <div class="productos" id="productsWithoutDiscount">
                        <div class="carousel">
                            <button id="previousProductsWithoutDiscount">
                                <i class="fa-solid fa-angle-left disabled"></i>
                            </button>
                        </div>
                        <% if (productsWithoutDiscount.length > 0) { %>
                            <% productsWithoutDiscount.forEach(product => {%>
                                <article>
                                    <a href="/products/detail/<%= product.id %> ">
                                        <img src="../images/products/<%= product.images[0].image %>" alt="portatil" class="product_img">
                                    </a>
                                    <div class="main-article">
                                        <h4 class="descripcion">
                                            <%= product.name%>
                                        </h4>
                                        <p class="precio">
                                            <%= "$" + Number(product.price).toLocaleString('es-ES') %>
                                        </p>                                  
                                        <p class="envios">Envio:
                                            <%= product.envio!=0 ? "$"+product.shipping : 'Gratis'; %>
                                        </p>
                                    </div>
                                </article>
                            <%}); %>
                        <% } else { %>
                            <div>
                                <h3>
                                    Producto nuevo no encontrado
                                    <a class="boton-volver" href="/">Volver</a>
                                </h3>
                            </div>
                        <% } %>
                        <div class="carousel">
                            <button id="nextProductsWithoutDiscount">
                                <i class="fa-solid fa-angle-right"></i>
                            </button>
                        </div>
                    </div>
                </section>

                <section class="Ofertas">
                    <h3>Productos en Oferta</h3>
                    <div class="productos" id="productsWithDiscount">
                        <div class="carousel">
                            <button id="previousProductsWithDiscount">
                                <i class="fa-solid fa-angle-left disabled"></i>
                            </button>
                        </div>
                        <% if (productsWithDiscount.length > 0) { %>
                            <% productsWithDiscount.forEach(product => {%>
                                <article>
                                    <a href="/products/detail/<%= product.id %> ">
                                        <img src="../images/products/<%= product.images[0].image %>" alt="portatil" class="product_img">
                                    </a>
                                    <div class="main-article">
                                        <h4 class="descripcion">
                                            <%= product.name%>
                                        </h4>
                                        <p class="precio">
                                            <%= "$" + Number(product.price).toLocaleString('es-ES') %>
                                        </p>
                                        <p class="envios">Envio:
                                            <%= product.envio!=0 ? "$"+product.shipping : 'Gratis'; %>
                                        </p>
                                    </div>
                                </article>
                            <%}); %>
                        <% } else { %>
                            <div>
                                <h3>
                                    Producto en Oferta no encontrado
                                    <a class="boton-volver" href="/">Volver</a>
                                </h3>
                            </div>
                        <% } %>
                        <div class="carousel">
                            <button id="nextProductsWithDiscount">
                                <i class="fa-solid fa-angle-right"></i>
                            </button>
                        </div>
                    </div>
                </section>

