<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {title:"Lista Productos", namePage:"listaproductos"}) %>

    <body>

        <%- include('../partials/header') %>

            <main>
                <section>
                    <div class="productos">
                        <% if (products.length > 0) { %>
                            <% products.forEach(product => {%>
                                <article class="articulo">
                                    <a href="/products/detail/<%= product.id %> ">
                                        <img src="/images/products/<%= product.images[0].image %>" alt="celular xiaomi" class="product_img">
                                    </a>
                                    <div class="main-article">
                                        <h4>
                                            <%= product.name %>
                                        </h4>
                                        <p class="descripcion">
                                            <%= product.specifications %>
                                        </p>
                                        <p class="precio">
                                            <%= "$" + Number(product.price).toLocaleString('es-ES') %>
                                        </p>
                                        <p>
                                            <%= product.cuotas %>
                                        </p>
                                        <p class="envios">
                                            <%= product.envio!=0? product.envio:"Gratis" ; %>
                                        </p>
                                        <a class="boton-editar" href="/products/edit/<%= product.id %>">Editar</a>
                                        <a class="boton-eliminar" href="/products/delete/<%= product.id %>">Eliminar</a>
                                    </div>
                                </article>
                                <%}); %>
                            <% }  else { %>
                                <div>
                                    <h1>
                                        Producto no encontrado
                                        <a class="boton-volver" href="/">Volver</a>
                                    </h1>
                                </div>
                            <% } %>
                             
                    </div>
                </section>
            </main>

            <%- include('../partials/footer') %>

    </body>

</html>