<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {title:"Agregar y editar Producto", namePage:"add_editProduct"}) %>

    <body>

        <%- include('../partials/header') %>

            <main>
                <section class="photo">
                    <img src="/images/logo-tech-house.png" alt="" srcset="">
                    <div class="collage-photo">
                        <img src="/images/logo-tech-house.png" alt="" srcset="" class="enable">
                        <img src="/images/logo-tech-house.png" alt="" srcset="" class="disabled">
                        <img src="/images/logo-tech-house.png" alt="" srcset="" class="disabled">
                    </div>
                    <div class="link-photo">
                        <i class="fa-solid fa-camera"></i>
                        <h5>Ingrese una Imagen</h5>
                    </div>
                </section>
                <section class="information">
                    <div class="information-header">
                        <h3>INFORMACIÓN DEL PRODUCTO</h3>
                    </div>
                    <div class="information-main">
                        <form action="/products/create" method="post" class="infor-product">
                            <div class="infor-product-section">
                                <label for="name">Nombre:</label>
                                <input type="text" name="name" id="name" placeholder="Nombre">
                            </div>
                            <div class="infor-product-section">
                                <label for="specifications">Especificaciones:</label>
                                <textarea name="specifications" id="specifications"> </textarea>
                            </div>
                            <div class="infor-product-section">
                                <div class="characteristics-header">
                                    <h4>Caractersiticas:</h4>
                                </div>
                                <div class="characteristics-main">
                                    <div class="characteristics-main-title">
                                        <label for="characteristics-title">Titulo de la Caracteristicas:</label>
                                        <input type="text" name="characteristicsTitle" id="characteristics-title" placeholder="Titulo">
                                    </div>
                                    <div class="characteristics-main-context">
                                        <div class="characteristics-main-context-top">
                                            <h5>Cuerpo de la Caracteristicas</h5>
                                            <i class="fa-solid fa-circle-plus"></i>
                                        </div>
                                        <div class="characteristics-main-context-down" id="characteristics-main-context-down">
                                            <label for="characteristics-context-subtitle">Subtitulo:</label>
                                            <input type="text" name="characteristicsContextSubtitle" id="characteristics-context-subtitle" placeholder="Subtitulo">
                                            <label for="characteristics-context-description">Descripcion:</label>
                                            <input type="text" name="characteristicsContextDescription" id="characteristics-context-description" placeholder="Descripcion">
                                        </div>
                                    </div>
                                    <div class="characteristics-main-add">
                                        <a href="">Agregar nueva caracteristica</a>
                                        <i id="characteristic-add" class="fa-solid fa-circle-plus" onclick="addNewDivDiscripction();"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="infor-product-section">
                                <label for="warranty">Categoria:</label>
                                <select name="category" id="category">
                                    <% categoryProduct.forEach(category=>{ %>
                                        <option value="<%= category.id %>"><%= category.name %> </option>
                                    <%}) %> 
                                </select>
                            </div>
                            <div class="infor-product-section">
                                <label for="warrantyText">Garantia:</label>
                                <input type="text" name="warrantyText" id="warrantyText" placeholder="Descripción de la Garantia">
                                <input type="number" name="warrantyTime" id="warranty" placeholder="Tiempo de la Garantia">
                            </div>
                            <div class="infor-product-section">
                                <label>Medios de Pago:</label>
                                <div class="payment-methods">
                                    <% paymentMethod.forEach(method => { %>
                                        <div class="payment-method">
                                            <input type="checkbox" name="paymentMethod" value="<%= method.id %>" id="paymentMethod<%= method.id %>">
                                            <label for="paymentMethod<%= method.id %>"><img src="/images/methodLogos/<%= method.image %> " alt="" srcset=""></label>
                                        </div>
                                        <%}); %>
                                </div>
                            </div>
                            <div class="infor-product-section">
                                <label for="price">Precio:</label>
                                <input type="number" name="price" id="price" placeholder="Precio">
                            </div>
                            <div class="infor-product-section">
                                <label for="descount">Descuento:</label>
                                <input type="number" name="descount" id="descount" placeholder="Descuento">
                            </div>
                            <div class="infor-product-section btn-save-reset">
                                <button type="submit">Guardar</button>
                                <button type="reset">Borrar</button>
                            </div>
                        </form>
                    </div>
                </section>
            </main>

            <%- include('../partials/footer') %>

    </body>
    <script src="/js/product.js"></script>
    <script src="https://kit.fontawesome.com/f108e44f29.js" crossorigin="anonymous"></script>

</html>